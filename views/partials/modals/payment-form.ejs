<style>
  #payment-area {
    width: 100%;
    max-width: 560px;
    margin: 0 auto;
  }

  #payment-area * {
    box-sizing: border-box;
  }

  #payment-area .payment-card {
    background: #ffffff;
    border-radius: 20px;
    overflow: hidden;
    animation: slideUp 0.4s ease-out;
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }

    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  #payment-area .payment-header {
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    padding: 1.5rem;
    color: white;
    text-align: center;
  }

  #payment-area .payment-header-icon {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    display: block;
  }

  #payment-area .payment-header h5 {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0;
  }

  #payment-area .payment-body {
    padding: 1.5rem;
  }

  #payment-area .payment-label {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
    font-weight: 600;
    color: #4b5563;
    margin-bottom: 0.75rem;
  }

  #payment-area .payment-label i {
    color: #10b981;
    font-size: 1.1rem;
  }

  #payment-area .plan-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0.75rem;
    margin-bottom: 1.5rem;
  }

  #payment-area .plan-option {
    position: relative;
    border: 2px solid #e5e7eb;
    border-radius: 12px;
    padding: 1rem;
    cursor: pointer;
    transition: all 0.3s ease;
    background: #ffffff;
  }

  #payment-area .plan-option:hover {
    border-color: #10b981;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(16, 185, 129, 0.15);
  }

  #payment-area .plan-option input[type="radio"] {
    position: absolute;
    opacity: 0;
  }

  #payment-area .plan-option input[type="radio"]:checked+.plan-content {
    color: #10b981;
  }

  #payment-area .plan-option input[type="radio"]:checked~.plan-check {
    opacity: 1;
    transform: scale(1);
  }

  #payment-area .plan-option:has(input:checked) {
    border-color: #10b981;
    background: linear-gradient(135deg, #ecfdf5 0%, #d1fae5 100%);
    box-shadow: 0 4px 12px rgba(16, 185, 129, 0.2);
  }

  #payment-area .plan-content {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    transition: color 0.3s ease;
  }

  #payment-area .plan-name {
    font-size: 1.1rem;
    font-weight: 700;
  }

  #payment-area .plan-price {
    font-size: 0.85rem;
    color: #6b7280;
    font-weight: 500;
  }

  #payment-area .plan-check {
    position: absolute;
    top: 0.5rem;
    right: 0.5rem;
    width: 24px;
    height: 24px;
    background: #10b981;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 0.75rem;
    opacity: 0;
    transform: scale(0);
    transition: all 0.3s ease;
  }

  #payment-area .phone-input-group {
    display: flex;
    align-items: stretch;
    border: 2px solid #e5e7eb;
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s ease;
    background: #ffffff;
    margin-bottom: 1rem;
  }

  #payment-area .phone-input-group:focus-within {
    border-color: #10b981;
    box-shadow: 0 0 0 3px rgba(16, 185, 129, 0.1);
  }

  #payment-area .phone-prefix {
    background: #f9fafb;
    border-right: 2px solid #e5e7eb;
    padding: 1rem;
    display: flex;
    align-items: center;
    font-weight: 600;
    color: #374151;
    font-size: 1.1rem;
  }

  #payment-area .phone-input {
    flex: 1;
    border: none;
    padding: 1rem;
    font-size: 1.1rem;
    outline: none;
    background: transparent;
  }

  #payment-area .phone-input::placeholder {
    color: #9ca3af;
  }

  #payment-area .submit-btn {
    width: 100%;
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    border: none;
    border-radius: 12px;
    padding: 1rem;
    font-size: 1.1rem;
    font-weight: 700;
    color: white;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    transition: all 0.3s ease;
    box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
    margin-top: 1.5rem;
  }

  #payment-area .submit-btn:hover:not(:disabled) {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(16, 185, 129, 0.4);
  }

  #payment-area .submit-btn:active:not(:disabled) {
    transform: translateY(0);
  }

  #payment-area .submit-btn:disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }

  #payment-area .spinner-custom-css {
    width: 1.2rem;
    height: 1.2rem;
    border: 3px solid rgba(255, 255, 255, 0.3);
    border-radius: 50%;
    border-top-color: white;
    animation: spin 0.8s linear infinite;
  }

  @keyframes spin {
    to {
      transform: rotate(360deg);
    }
  }

  #payment-area .htmx-indicator {
    display: none;
  }

  #payment-area .htmx-request .htmx-indicator {
    display: inline-block;
  }

  #payment-area .htmx-request .label-text {
    display: none;
  }

  #payment-area #pay-form-feedback {
    border-radius: 8px;
    font-size: 0.9rem;
  }

  @media (max-width: 480px) {
    #payment-area .payment-body {
      padding: 1.25rem;
    }

    #payment-area .plan-name {
      font-size: 1rem;
    }

    #payment-area .plan-price {
      font-size: 0.8rem;
    }

    #payment-area .phone-input,
    #payment-area .phone-prefix {
      font-size: 1rem;
      padding: 0.875rem;
    }

    #payment-area .submit-btn {
      font-size: 1rem;
      padding: 0.875rem;
    }
  }

  @media (prefers-reduced-motion: reduce) {

    #payment-area *,
    #payment-area *::before,
    #payment-area *::after {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
    }
  }
</style>

<div class="modal fade" id="paymentModal" tabindex="-1" aria-hidden="true" data-bs-backdrop="static"
  data-bs-keyboard="false">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><i class="fa-solid fa-wallet me-1"></i> Malipo ya VIP</h5>
        <button type="button" class="btn-close" onclick="window.location.reload()" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div id="payment-area">
          <div class="payment-card">
            <div class="payment-header">
              <h5>Lipa kwa Simu</h5>
              <div
                class="networks d-flex flex-nowrap align-items-center justify-content-center gap-2 bg-light rounded-3 mt-3 px-4 mx-auto"
                style="width: fit-content; height: 40px; overflow: hidden;">
                <img src="/images/mpesa.png" style="width: 30px; height: 30px; object-fit: cover;" alt="Vodacom M-Pesa">
                <img src="/images/mixx.png" style="width: 30px; height: 30px; object-fit: cover;" alt="Mixx by Yas">
                <img src="/images/airtel.png" style="width: 30px; height: 30px; object-fit: cover;" alt="Airtel Money">
                <img src="/images/halopesa.png" style="width: 30px; height: 30px; object-fit: cover;" alt="Halopesa">
              </div>
            </div>
            <div class="payment-body">
              <form id="vip-payment-form" hx-post="/api/pay" hx-target="#payment-area" hx-swap="innerHTML"
                hx-disabled-elt="input, button" class="needs-validation" novalidate>

                <!-- Phone: +255 prefix + 9 digits not starting with 0 -->
                <div>
                  <label for="payPhone" class="payment-label fs-6">
                    <i class="fa-solid fa-phone"></i>
                    Namba Yako ya Simu
                  </label>
                  <div class="phone-input-group mb-0">
                    <span class="phone-prefix">+255</span>
                    <input type="text" class="phone-input" id="payPhone" name="phone9" inputmode="numeric"
                      pattern="[1-9][0-9]{8}" minlength="9" maxlength="9" placeholder="Mfano: 712345678"
                      autocomplete="tel" required>
                  </div>
                </div>
                <!-- Inline feedback area for errors (updated via OOB swap) -->
                <div id="pay-form-feedback" class="d-none"></div>
                <button type="submit" class="submit-btn">
                  <span class="label-text">
                    Tuma Malipo
                    <i class="fa-regular fa-paper-plane"></i>
                  </span>
                  <!-- HTMX loading indicator: spinner only -->
                  <span class="htmx-indicator">
                    <span class="spinner-border spinner-custom-css" role="status" aria-hidden="true"></span>
                  </span>
                </button>
              </form>
            </div>
          </div>
        </div>
        <!-- Modal root: HTMX will inject modal HTML here -->
        <div id="modal-root"></div>
      </div>
    </div>
  </div>
</div>


<script>
  // Simple client-side Bootstrap validation (optional)
  (function () {
    const form = document.getElementById('vip-payment-form');
    if (!form) return;
    form.addEventListener('submit', function (e) {
      if (!form.checkValidity()) {
        e.preventDefault();
        e.stopPropagation();
      }
      form.classList.add('was-validated');
    }, false);
  })();
</script>
