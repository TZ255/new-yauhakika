<% if (!tips || tips.length === 0) { %>
<div class="alert alert-info mb-0">Hakuna mikeka kwa siku hii.</div>
<% } else { %>
<div class="row row-cols-1 row-cols-lg-2 gx-3 gy-4 mt-3">
  <% tips.forEach((tip) => { %>
  <div class="col">
    <div class="btts-card shadow-sm">
      <div class="d-flex justify-content-between align-items-start gap-2">
        <div>
          <div class="league-chip mb-2"><i class="fa-solid fa-trophy"></i> <%= tip.league || 'League TBD' %></div>
          <div class="fw-semibold"><i class="fa-regular fa-futbol"></i> <%= tip.match %></div>
        </div>
        <div class="text-end">
          <div class="fw-bold text-primary"><%= tip.kickoff || 'TBD' %></div>
          <div class="small text-muted"><%= tip.dateLabel || '' %></div>
        </div>
      </div>
      <div class="mt-3 d-flex align-items-center flex-column gap-2">
        <span class="pill mx-auto"><%= tip.prediction %></span>
        <span class="text-center muted" style="font-size: 0.75rem;"><%= tip.prediction === "BTTS: Yes" ? `${tip.match} timu zote kufungana` : `${tip.match} timu zote au moja kutokufunga goli` %></span>
      </div>
    </div>
  </div>
  <% }) %>
</div>
<% } %>