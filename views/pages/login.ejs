<div class="section-stack">
  <section class="section-card auth-card">
    <div class="section-header">
      <div>
        <h1 class="section-title h4 mb-1">Ingia</h1>
        <p class="section-subtitle mb-0">Tumia barua pepe na nenosiri la akaunti yako</p>
      </div>
    </div>

    <%- include('../fragments/alert', { id: 'login-alert', type: 'danger', message: '' }) %>

    <form
      id="login-form"
      class="mt-3 auth-hx-form"
      hx-post="/auth/login"
      hx-target="#login-alert"
      hx-swap="outerHTML"
      hx-indicator="#login-spinner"
    >
      <div class="mb-3">
        <label for="login-email" class="form-label">Barua pepe</label>
        <input type="email" class="form-control" id="login-email" name="email" required />
      </div>
      <div class="mb-4">
        <label for="login-password" class="form-label">Nenosiri</label>
        <input type="password" class="form-control" id="login-password" name="password" required minlength="4" />
      </div>
      <button type="submit" class="btn btn-success w-100 d-flex align-items-center justify-content-center gap-2">
        Ingia
        <span
          id="login-spinner"
          class="spinner-border spinner-border-sm htmx-indicator"
          role="status"
          aria-hidden="true"
        ></span>
      </button>
      <ul class="d-lg-flex justify-content-between mt-3 px-3" style="list-style: circle;">
        <li>Huna akaunti? <a href="/auth/register" class="text-decoration-none">Jisajili Hapa</a></li>
        <li><a href="/auth/reset" class="text-decoration-none d-block">Umesahau password?</a></li>
      </ul>
    </form>
  </section>
</div>
