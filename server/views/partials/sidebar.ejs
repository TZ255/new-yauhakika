<aside id="sidebar" class="sidebar">
  <div class="sidebar-header d-flex align-items-center justify-content-between px-3 py-3">
    <div>
      <div class="brand-mark d-flex align-items-center gap-2">
        <div class="brand-dot"></div>
        <a href="/" class="brand-name text-decoration-none fw-bold text-inverse">MIKEKA<span class="premium-color">YA</span>UHAKIKA</a>
      </div>
      <small class="text-muted">Tabiri bora za betting Tanzania</small>
    </div>
    <button class="btn btn-sm btn-outline-light d-md-none" id="sidebarClose" aria-label="Funga menyu">âœ•</button>
  </div>

  <nav class="px-2 pb-3">
    <ul class="nav flex-column gap-1">
      <% navItems.forEach((item) => { %>
        <li class="nav-item">
          <a
            class="nav-link sidebar-link d-flex align-items-center gap-2 <%= activeId === item.id ? 'active' : '' %>"
            href="<%= item.href %>"
            <% if(item.href.startsWith('mailto')) { %> target="_blank" rel="noreferrer" <% } %>
          >
            <span class="dot"></span>
            <span><%= item.label %></span>
          </a>
        </li>
      <% }) %>
    </ul>
  </nav>
</aside>
