<div class="section-stack">
  <section class="section-card">
    <div class="section-header">
      <div>
        <h1 class="section-title display-6 fw-bold mb-2">Makala</h1>
        <p class="section-subtitle mb-0">Makala za betting Tanzania</p>
      </div>
    </div>
  </section>

  <section class="section-card">
    <% if (!posts || posts.length === 0) { %>
      <div class="alert alert-warning mb-0">Hakuna makala kwa sasa. Rudi baadae.</div>
    <% } else { %>
      <div class="section-grid columns-2 mb-4">
        <% posts.forEach((post) => { %>
          <a class="card blog-card h-100 text-decoration-none" href="/blog/<%= post.slug %>">
            <% if (post.heroImage) { %>
              <img src="<%= post.heroImage %>" class="card-img-top" alt="<%= post.title %>" />
            <% } %>
            <div class="card-body d-flex flex-column">
              <div class="d-flex w-100 justify-content-between align-items-start">
                <h2 class="h6 mb-1 text-white"><%= post.title %></h2>
                <small class="text-muted"><%= new Date(post.pubDate).toLocaleDateString('sv-SE') %></small>
              </div>
              <p class="mb-2 text-muted flex-grow-1"><%= post.description %></p>
              <% if (post.tags && post.tags.length) { %>
                <div class="d-flex gap-2 flex-wrap mb-2">
                  <% post.tags.forEach((tag) => { %>
                    <span class="pill pill-muted">#<%= tag %></span>
                  <% }) %>
                </div>
              <% } %>
              <span class="btn btn-outline-accent mt-auto align-self-start">Soma zaidi</span>
            </div>
          </a>
        <% }) %>
      </div>
    <% } %>

    <div class="d-flex justify-content-between align-items-center">
      <% if (pagination.prev) { %>
        <a class="btn btn-outline-secondary" href="<%= pagination.prev === 1 ? '/blog' : '/blog/page/' + pagination.prev %>">&larr; Makala za hivi karibuni</a>
      <% } else { %>
        <span></span>
      <% } %>

      <% if (pagination.next) { %>
        <a class="btn btn-outline-secondary" href="/blog/page/<%= pagination.next %>">Makala za zamani &rarr;</a>
      <% } else { %>
        <span></span>
      <% } %>
    </div>
  </section>
</div>
